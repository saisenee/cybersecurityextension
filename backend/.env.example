# Backend Server
PORT=3000
NODE_ENV=development

# API Keys (get from respective services)
SAFE_BROWSING_API_KEY=your_safe_browsing_api_key_here
OTX_API_KEY=your_otx_api_key_here
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# AI Provider: "gemini" | "openrouter" | "none"
AI_PROVIDER=none
AI_API_KEY=

# Comma-separated official domain allowlist
OFFICIAL_DOMAIN_ALLOWLIST=amazon.com,google.com,microsoft.com,interac.ca,canada.ca,cra-arc.gc.ca,apple.com,meta.com,twitter.com

# CORS: extension origin during dev, or keep localhost
# For production: Add your actual Chrome extension ID after loading it in Chrome
# chrome://extensions -> Details -> copy ID
CORS_ORIGINS=chrome-extension://your-extension-id-here,http://localhost:3000

# Cache TTL in seconds
CACHE_TTL=600
